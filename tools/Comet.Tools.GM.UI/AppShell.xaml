<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Comet.Tools.GM.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:root="clr-namespace:Comet.Tools.GM.UI"
    xmlns:local="clr-namespace:Comet.Tools.GM.UI"
    xmlns:pages="clr-namespace:Comet.Tools.GM.UI"
    xmlns:viewmodels="clr-namespace:Comet.Tools.GM.UI.ViewModels"
    x:DataType="viewmodels:ShellViewModel"
    FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="{StaticResource Light}"
    BackgroundColor="{StaticResource Background}">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="{Binding Login.Title}"
            FlyoutIcon="{Binding Login.Icon}"
            Icon="{Binding Login.Icon}"
            ContentTemplate="{DataTemplate pages:LoginPage}" />
    </FlyoutItem>
    
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" IsVisible="False">
        <ShellContent 
            Title="{Binding Dashboard.Title}"
            FlyoutIcon="{Binding Dashboard.Icon}"
            Icon="{Binding Dashboard.Icon}"
            ContentTemplate="{DataTemplate pages:DashboardPage}" />
    </FlyoutItem>

    <ShellContent 
        Title="{Binding About.Title}"
        FlyoutIcon="{Binding About.Icon}"
        Icon="{Binding About.Icon}"
        ContentTemplate="{DataTemplate pages:AboutPage}" />

</Shell>
